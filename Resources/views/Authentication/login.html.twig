{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <form name="user_login_form" method="post" action="{{ path('users_check') }}" role="form">
                <div id="user_login_form">
                    <div class="form-group">
                        <label class="control-label required" for="user_login_form_username">{{ 'Username' | trans }}</label>
                        <input
                                type="text" id="user_login_form_username" name="_username"
                                required="required" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class="control-label required" for="user_login_form_password">{{ 'Password' | trans }}</label>
                        <input
                                type="password" id="user_login_form_password" name="_password"
                                required="required" class="form-control">
                    </div>
                    <button type="submit" id="user_login_form_login" name="user_login_form[login]"
                            class="btn btn-primary">{{ 'Login' | trans }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}